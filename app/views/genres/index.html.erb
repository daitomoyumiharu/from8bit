

<h1>ジャンル一覧</h1>

<div class="row">
  <% @genres.each do |genre| %>
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <div class="card-body">
          <h5 class="card-title"><%= genre.name %></h5>
          <div class="d-flex justify-content-between align-items-center">
            <%= link_to "詳細を見る", genre_path(genre), class: "btn btn-sm btn-outline-secondary" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>